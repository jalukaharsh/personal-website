---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  pubDate: Date;
  tags?: string[];
  collection: 'books' | 'projects' | 'travel';
  author?: string;
  publicationYear?: number;
}

const { title, pubDate, tags, collection, author, publicationYear } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const collectionLabels = {
  books: 'Books',
  projects: 'Projects',
  travel: 'Travel'
};
---

<BaseLayout title={`${title} - ${collectionLabels[collection]}`}>
  <Header slot="header" />
  
  <article class="prose prose-lg max-w-none">
    <div class="back-link-container">
      <a 
        href={`/${collection}`}
        class="back-link"
      >
        ‚Üê Back to {collectionLabels[collection]}
      </a>
    </div>

    <header class="header-container">
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      
      {author && publicationYear && (
        <p class="author-info">
          by {author} ({publicationYear})
        </p>
      )}
      
      <div class="flex items-center gap-4 date-container">
        <time datetime={pubDate.toISOString()} class="post-date">
          {formattedDate}
        </time>
      </div>

      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map(tag => (
            <a 
              href={`/${collection}/tag/${tag}`}
              class="post-tag"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    <div class="prose-content">
      <slot />
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style>
  
  .back-link-container {
    max-width: 800px;
    margin: 0 auto 0 auto;
    background-color: var(--color-bg-content);
    padding: var(--spacing-6);
    border-radius: var(--radius-lg);
  }

  .header-container {
    max-width: 800px;
    margin: 0 auto var(--spacing-1) auto;
    background-color: var(--color-bg-content);
    color: var(--color-text-on-dark);
    padding: var(--spacing-6);
    border-radius: var(--radius-lg);
  }

  .header-container h1 {
    margin-bottom: var(--spacing-2);
  }

  .back-link {
    color: var(--colour-electric-blue-on-hover);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .back-link:hover {
    color: var(--color-text-on-dark);
    text-decoration: none;
  }

  .back-link:focus-visible {
    outline: 2px solid var(--colour-electric-blue-on-hover);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
    transition-delay: var(--transition-delay-none);
  }

  .author-info {
    color: var(--color-text-primary);
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-1);
  }

  .post-date {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  .date-container {
    margin-bottom: var(--spacing-3);
  }

  .post-tag {
    font-size: var(--font-size-xs);
    background-color: var(--color-mint-20);
    color: var(--colour-electric-blue-on-hover);
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
    border: 1px solid var(--colour-electric-blue-on-hover);
    text-decoration: none;
    display: inline-block;
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .post-tag:hover {
    background-color: var(--colour-electric-blue-on-hover);
    color: var(--color-text-on-dark);
    text-decoration: none;
  }

  .post-tag:focus-visible {
    outline: 2px solid var(--colour-electric-blue-on-hover);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
    transition-delay: var(--transition-delay-none);
  }
</style>
