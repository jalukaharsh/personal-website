---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags?: string[];
}

const { title, description, pubDate, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />
  
  <article class="prose prose-lg max-w-none">
    <div class="mb-8">
      <a 
        href="/blog"
        class="blog-back-link"
      >
        ‚Üê Back to Blog
      </a>
    </div>

    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      
      <div class="flex items-center gap-4 mb-4">
        <time datetime={pubDate.toISOString()} class="blog-post-date">
          {formattedDate}
        </time>
      </div>

      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map(tag => (
            <a 
              href={`/blog/tag/${tag}`}
              class="blog-post-tag"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    <div class="prose-content">
      <slot />
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Modern Tech Theme - BlogPost Layout Styling */
  
  .blog-back-link {
    color: var(--color-interactive-primary); /* Electric Blue */
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .blog-back-link:hover {
    color: var(--color-interactive-hover); /* Darker blue on hover */
    text-decoration: none;
  }

  .blog-back-link:focus-visible {
    outline: 2px solid var(--color-interactive-primary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
    transition-delay: var(--transition-delay-none);
  }

  .blog-post-date {
    color: var(--color-text-muted); /* Muted gray for metadata */
    font-size: var(--font-size-sm);
  }

  .blog-post-tag {
    font-size: var(--font-size-xs);
    background-color: var(--color-electric-blue-20); /* Light Electric Blue background */
    color: var(--color-interactive-primary); /* Electric Blue text */
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    border: 1px solid var(--color-interactive-primary);
    text-decoration: none;
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .blog-post-tag:hover {
    background-color: var(--color-interactive-primary); /* Electric Blue background */
    color: var(--color-text-on-dark); /* White text */
    text-decoration: none;
  }

  .blog-post-tag:focus-visible {
    outline: 2px solid var(--color-interactive-primary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
    transition-delay: var(--transition-delay-none);
  }
</style>
