---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="card-warm bg-white border border-primary-300 rounded-lg p-8 hover:-translate-y-1 transition-all duration-300">
  <h2 class="text-2xl font-bold mb-3">
    <a href={`/blog/${slug}`} class="text-text-primary hover:text-tech-600 transition-colors">
      {title}
    </a>
  </h2>
  
  <time datetime={pubDate.toISOString()} class="text-sm text-text-tertiary block mb-4">
    {formattedDate}
  </time>
  
  <p class="text-text-secondary mb-6 leading-relaxed">
    {description}
  </p>
  
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-6">
      {tags.map(tag => (
        <a 
          href={`/blog/tag/${tag}`}
          class="text-xs bg-primary-100 text-primary-800 px-3 py-1.5 rounded-full hover:bg-primary-200 transition-colors"
        >
          {tag}
        </a>
      ))}
    </div>
  )}
  
  <a 
    href={`/blog/${slug}`}
    class="inline-block text-tech-600 hover:text-tech-700 font-semibold transition-colors"
  >
    Read more â†’
  </a>
</article>
