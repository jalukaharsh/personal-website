---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white border border-secondary-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
  <h2 class="text-2xl font-bold mb-2">
    <a href={`/blog/${slug}`} class="text-secondary-900 hover:text-primary-600 transition-colors">
      {title}
    </a>
  </h2>
  
  <time datetime={pubDate.toISOString()} class="text-sm text-secondary-500 block mb-3">
    {formattedDate}
  </time>
  
  <p class="text-secondary-700 mb-4">
    {description}
  </p>
  
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <a 
          href={`/blog/tag/${tag}`}
          class="text-xs bg-primary-100 text-primary-800 px-3 py-1 rounded-full hover:bg-primary-200 transition-colors"
        >
          {tag}
        </a>
      ))}
    </div>
  )}
  
  <a 
    href={`/blog/${slug}`}
    class="inline-block text-primary-600 hover:text-primary-800 font-semibold transition-colors"
  >
    Read more â†’
  </a>
</article>
