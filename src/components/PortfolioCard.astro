---
interface Props {
  title: string;
  description: string;
  projectDate: Date;
  technologies: string[];
  slug: string;
  featured?: boolean;
}

const { title, description, projectDate, technologies, slug, featured } = Astro.props;
---

<article class="card-warm bg-white rounded-lg border border-primary-300 p-8 hover:-translate-y-1 transition-all duration-300">
  {featured && (
    <span class="inline-block px-3 py-1.5 bg-primary-600 text-white text-sm font-semibold rounded-full mb-4">
      Featured
    </span>
  )}
  <h2 class="text-2xl font-bold mb-3">
    <a href={`/portfolio/${slug}`} class="text-text-primary hover:text-tech-600 transition-colors">
      {title}
    </a>
  </h2>
  <time class="text-text-tertiary text-sm block mb-4">
    {projectDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}
  </time>
  <p class="text-text-secondary mb-6 line-clamp-3 leading-relaxed">{description}</p>
  <div class="flex flex-wrap gap-2 mb-6">
    {technologies.slice(0, 4).map(tech => (
      <span class="px-3 py-1.5 bg-primary-100 text-primary-800 rounded text-sm">
        {tech}
      </span>
    ))}
    {technologies.length > 4 && (
      <span class="px-3 py-1.5 bg-primary-100 text-primary-800 rounded text-sm">
        +{technologies.length - 4} more
      </span>
    )}
  </div>
  <a 
    href={`/portfolio/${slug}`}
    class="text-tech-600 hover:text-tech-700 font-semibold inline-flex items-center group"
  >
    View Project
    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </a>
</article>
