---
const currentPath = Astro.url.pathname;
---

<header class="bg-secondary-900 text-white shadow-md">
  <nav class="container mx-auto px-4 py-4 max-w-4xl">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <a href="/" class="text-2xl font-bold hover:text-secondary-300 transition-colors">
        My Blog
      </a>
      <ul class="flex gap-6 text-lg">
        <li>
          <a 
            href="/" 
            class={`hover:text-secondary-300 transition-colors ${currentPath === '/' ? 'text-primary-400 font-semibold' : ''}`}
          >
            Home
          </a>
        </li>
        <li>
          <a 
            href="/blog" 
            class={`hover:text-secondary-300 transition-colors ${currentPath.startsWith('/blog') ? 'text-primary-400 font-semibold' : ''}`}
          >
            Blog
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>
