---
const currentPath = Astro.url.pathname;
---

<header class="header-elegant w-full flex justify-center">
  <nav class="w-full max-w-6xl px-4" style="padding-top: 2rem; padding-bottom: 2rem;">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <a href="/" class="nav-link-logo text-2xl font-bold">
        Harsh Jaluka
      </a>
      <ul class="flex gap-6 text-lg">
        <li>
          <a 
            href="/" 
            class={`nav-link ${currentPath === '/' ? 'nav-link-active' : ''}`}
          >
            Home
          </a>
        </li>
        <li>
          <a 
            href="/books" 
            class={`nav-link ${currentPath.startsWith('/books') ? 'nav-link-active' : ''}`}
          >
            Books
          </a>
        </li>
        <li>
          <a 
            href="/projects" 
            class={`nav-link ${currentPath.startsWith('/projects') ? 'nav-link-active' : ''}`}
          >
            Projects
          </a>
        </li>
        <li>
          <a 
            href="/travel" 
            class={`nav-link ${currentPath.startsWith('/travel') ? 'nav-link-active' : ''}`}
          >
            Travel
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  .header-elegant {
    background-color: var(--color-bg-primary);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .nav-link-logo {
    color: var(--color-text-on-dark);
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .nav-link-logo:hover {
    color: var(--colour-electric-blue-on-hover);
    text-decoration: none;
  }

  .nav-link-logo:focus-visible {
    outline: 2px solid var(--colour-electric-blue-on-hover);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
    transition-delay: var(--transition-delay-none);
  }

  .nav-link {
    color: var(--color-text-on-dark);
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .nav-link:hover {
    color: var(--colour-electric-blue-on-hover);
    text-decoration: none;
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--colour-electric-blue-on-hover);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
    transition-delay: var(--transition-delay-none);
  }

  .nav-link-active {
    color: var(--colour-electric-blue-on-hover);
    font-weight: var(--font-weight-semibold);
  }
</style>
