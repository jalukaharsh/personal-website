---
const currentPath = Astro.url.pathname;
---

<header class="header-elegant w-full flex justify-center">
  <nav class="w-full max-w-4xl px-4 py-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <a href="/" class="nav-link-logo text-2xl font-bold">
        Harsh Jaluka
      </a>
      <ul class="flex gap-6 text-lg">
        <li>
          <a 
            href="/" 
            class={`nav-link ${currentPath === '/' ? 'nav-link-active' : ''}`}
          >
            Home
          </a>
        </li>
        <li>
          <a 
            href="/books" 
            class={`nav-link ${currentPath.startsWith('/books') ? 'nav-link-active' : ''}`}
          >
            Books
          </a>
        </li>
        <li>
          <a 
            href="/projects" 
            class={`nav-link ${currentPath.startsWith('/projects') ? 'nav-link-active' : ''}`}
          >
            Projects
          </a>
        </li>
        <li>
          <a 
            href="/travel" 
            class={`nav-link ${currentPath.startsWith('/travel') ? 'nav-link-active' : ''}`}
          >
            Travel
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  .header-elegant {
    background-color: var(--color-bg-primary);
    border-bottom: 1px solid var(--color-border);
  }

  .nav-link-logo {
    color: var(--color-text-primary);
  }

  .nav-link-logo:hover {
    text-decoration: underline;
  }

  .nav-link-logo:focus-visible {
    outline: 2px solid var(--color-text-primary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
  }

  .nav-link {
    color: var(--color-text-primary);
  }

  .nav-link:hover {
    text-decoration: underline;
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--color-text-primary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
  }

  .nav-link-active {
    text-decoration: underline;
    font-weight: var(--font-weight-semibold);
  }
</style>
