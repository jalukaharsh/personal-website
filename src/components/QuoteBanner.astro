---
import quotesData from '../content/quotes/all-quotes.json';

const quotes = quotesData.quotes;
const randomQuote = quotes[Math.floor(Math.random() * quotes.length)];
---

<div class="quote-banner" style="padding: 1.5rem; margin-bottom: 2rem;">
  <blockquote class="text-lg italic text-white">
    "{randomQuote.text}"
  </blockquote>
  <div class="mt-4 text-white text-sm">
    <span class="font-semibold">â€” {randomQuote.author}</span>
    {randomQuote.source && (
      <span class="text-gray-400">, {randomQuote.source}</span>
    )}
  </div>
</div>
