---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const books = await getCollection('books');
  return books.map(book => ({
    params: { slug: book.slug },
    props: { book },
  }));
}

interface Props {
  book: CollectionEntry<'books'>;
}

const { book } = Astro.props;
const { Content } = await book.render();
---

<BaseLayout 
  title={`${book.data.title} - Books`}
  description={book.data.description}
>
  <Header slot="header" />
  
  <article class="prose prose-lg max-w-none">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">{book.data.title}</h1>
      <p class="text-gray-600 text-lg mb-4">
        by {book.data.author} ({book.data.publicationYear})
      </p>
      <p class="text-gray-500">
        Published on {book.data.pubDate.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </p>
      {book.data.tags && book.data.tags.length > 0 && (
        <div class="flex gap-2 mt-4">
          {book.data.tags.map(tag => (
            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
    
    <Content />
  </article>

  <Footer slot="footer" />
</BaseLayout>
