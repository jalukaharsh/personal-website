---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContentListItem from '../../components/ContentListItem.astro';

const allPosts = await getCollection('projects', ({ data }) => {
  return data.draft === false;
});

const sortedPosts = allPosts.sort((a, b) => {
  return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
});
---

<BaseLayout 
  title="Projects - My Personal Website"
  description="Check out my latest projects and work."
>
  <Header slot="header" />
  
  <div class="main-container space-y-8">
    <section class="section">
      <div class="page-intro" style="margin-bottom: 4rem;">
        <p>These are some projects I've spent a lot of my time on, spanning scientific research, software development, writing and more. </p>
      </div>
      
      <div class="mb-8">
        <p class="projects-count">
          {sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'}
        </p>
      </div>

      <ul class="space-y-4">
        {sortedPosts.map(post => (
          <ContentListItem
            title={post.data.title}
            slug={post.slug}
            collection="projects"
            metadata={post.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          />
        ))}
      </ul>

      {sortedPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="empty-message">No projects yet. Check back soon!</p>
        </div>
      )}
    </section>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
    
  .projects-count {
    color: var(--color-text-on-dark);
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-6);
  }

  .empty-message {
    color: var(--color-text-muted);
    font-size: var(--font-size-lg);
  }

</style>
