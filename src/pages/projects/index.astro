---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContentListItem from '../../components/ContentListItem.astro';

// Fetch all published projects posts (draft: false)
const allPosts = await getCollection('projects', ({ data }) => {
  return data.draft === false;
});

// Sort posts in reverse chronological order
const sortedPosts = allPosts.sort((a, b) => {
  return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
});
---

<BaseLayout 
  title="Projects - My Personal Website"
  description="Check out my latest projects and work."
>
  <Header slot="header" />
  
  <div class="projects-container space-y-8">
    <div class="page-intro" style="margin-bottom: 4rem;">
      <p>Explore my portfolio of projects spanning web development, design, and creative experiments. Each project represents a unique challenge and an opportunity to learn, build, and share something meaningful.</p>
    </div>
    
    <div class="mb-8">
      <p class="projects-count">
        {sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'}
      </p>
    </div>

    <ul class="space-y-4">
      {sortedPosts.map(post => (
        <ContentListItem
          title={post.data.title}
          slug={post.slug}
          collection="projects"
          metadata={post.data.pubDate.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        />
      ))}
    </ul>

    {sortedPosts.length === 0 && (
      <div class="text-center py-12">
        <p class="empty-message">No projects yet. Check back soon!</p>
      </div>
    )}
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Modern Tech Theme - Projects Index Page Styling */
  
  .projects-container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .projects-count {
    color: var(--color-text-on-dark); /* White text on dark background */
    font-size: var(--font-size-lg);
  }

  .empty-message {
    color: var(--color-text-muted); /* Muted gray */
    font-size: var(--font-size-lg);
  }

  .page-intro {
    margin-top: var(--spacing-12);
    color: var(--color-text-on-dark);
    font-size: var(--font-size-lg);
    line-height: 1.6;
  }
</style>
