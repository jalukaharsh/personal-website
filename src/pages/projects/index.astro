---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContentListItem from '../../components/ContentListItem.astro';

const allPosts = await getCollection('projects', ({ data }) => {
  return data.draft === false;
});

const sortedPosts = allPosts.sort((a, b) => {
  return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
});
---

<BaseLayout 
  title="Projects - Harsh Jaluka"
  description="Check out my latest projects and work."
>
  <Header slot="header" />
  
  <div class="main-container space-y-8">
    <section class="section">
      <div class="page-intro">
        <p>
          These are some projects I've spent a lot of my time on, spanning scientific research, software development, writing and more. 
        </p>
      </div>
    </section>
    
    <section class="section">
      <div class="mb-8">
        <div class="flex justify-between items-center mb-8">
          <p class="count-display">
            {sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'}
          </p>
          
          <div class="flex gap-2 items-center">
            <select id="sort-select" class="sort-dropdown">
              <option value="date" selected>Last Updated</option>
              <option value="title">Name</option>
            </select>
          </div>
        </div>
      </div>

      <ul class="content-list space-y-4">
        {sortedPosts.map(post => (
          <ContentListItem
            title={post.data.title}
            slug={post.slug}
            collection="projects"
            metadata={post.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
            sortData={{
              title: post.data.title,
              date: post.data.pubDate.valueOf()
            }}
          />
        ))}
      </ul>

      {sortedPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="empty-message">No projects yet. Check back soon!</p>
        </div>
      )}
    </section>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<script is:inline>
  function sortProjects(sortBy) {
    const list = document.querySelector('.content-list');
    if (!list) {
      console.error('content-list not found');
      return;
    }

    const items = Array.from(list.querySelectorAll('.content-item'));
    
    items.sort((a, b) => {
      const aValue = a.getAttribute('data-' + sortBy) || '';
      const bValue = b.getAttribute('data-' + sortBy) || '';
      
      if (sortBy === 'date') {
        return parseInt(bValue) - parseInt(aValue);
      }
      return aValue.localeCompare(bValue);
    });

    items.forEach(item => list.appendChild(item));
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSorting);
  } else {
    initSorting();
  }

  function initSorting() {
    const sortSelect = document.getElementById('sort-select');
    if (sortSelect) {
      sortSelect.addEventListener('change', (e) => sortProjects(e.target.value));
    }
  }
</script>
