---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import QuoteBanner from '../../components/QuoteBanner.astro';
import ContentListItem from '../../components/ContentListItem.astro';

const allReading = await getCollection('reading', ({ data }) => {
  return data.draft === false;
});

const sortedReading = allReading.sort((a, b) => {
  return a.data.title.localeCompare(b.data.title);
});
---

<BaseLayout 
  title="Reviews - Harsh Jaluka"
  description="Explore my book reviews and reading recommendations."
>
  <Header slot="header" />
  
  <div class="main-container">
    <section class="section">
      <QuoteBanner />
    </section>
    <section class="section">
      <p class="page-intro">
        I enjoy reading a lot. I try to maintain a record of books I've read <a href="https://docs.google.com/spreadsheets/d/1KBcC6kPlFMojaJ0qsyxlT6AmEO_JHay75Rf9d5mzLcY/edit?usp=sharing" target="_blank" rel="noopener noreferrer">here</a> or on my <a href="https://www.goodreads.com/user/show/94888357-harsh" target="_blank" rel="noopener noreferrer">Goodreads</a> account (feel free to add me). I've created this page to share my thoughts on those books.
      </p>

      <p class="page-intro"> 
        The quotes above are all hand-compiled from my own years of reading. Hit the refresh button on the bottom right for a new one! 
      </p>
    </section>

    <section class="section">
      <div class="mb-8">
        <div class="flex justify-between items-center mb-8">
          <p class="count-display">
            {sortedReading.length} {sortedReading.length === 1 ? 'review' : 'reviews'}
          </p>
          
          <div class="flex gap-2 items-center">
            <select id="sort-select" class="sort-dropdown">
              <option value="title" selected>Title</option>
              <option value="author">Author</option>
              <option value="year">Year</option>
            </select>
          </div>
        </div>
      </div>

      <ul id="reading-list" class="content-list space-y-4">
        {sortedReading.map(book => (
          <ContentListItem
            title={book.data.title}
            slug={book.slug}
            collection="reading"
            metadata={`by ${book.data.author} (${book.data.publicationYear})`}
            sortData={{
              title: book.data.title,
              author: book.data.author,
              year: book.data.publicationYear
            }}
          />
        ))}
      </ul>

      {sortedReading.length === 0 && (
        <div class="text-center py-12">
          <p class="empty-message">No books yet. Check back soon!</p>
        </div>
      )}
    </section>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<script is:inline>
  function sortReading(sortBy) {
    const list = document.getElementById('reading-list');
    if (!list) {
      console.error('reading-list not found');
      return;
    }

    const items = Array.from(list.querySelectorAll('.content-item'));
    
    items.sort((a, b) => {
      const aValue = a.getAttribute('data-' + sortBy) || '';
      const bValue = b.getAttribute('data-' + sortBy) || '';
      
      if (sortBy === 'year') {
        return parseInt(aValue) - parseInt(bValue);
      }
      return aValue.localeCompare(bValue);
    });

    items.forEach(item => list.appendChild(item));
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSorting);
  } else {
    initSorting();
  }

  function initSorting() {
    const sortSelect = document.getElementById('sort-select');
    if (sortSelect) {
      sortSelect.addEventListener('change', (e) => sortReading(e.target.value));
    }
  }
</script>
