---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogPostCard from '../components/BlogPostCard.astro';

// Fetch all blog posts
const allPosts = await getCollection('blog');

// Filter out draft posts and sort by pubDate in reverse chronological order
const publishedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Display 5-10 most recent posts (let's use 10)
const recentPosts = publishedPosts.slice(0, 10);
---

<BaseLayout 
  title="My Blog - Home" 
  description="Welcome to my personal blog where I share thoughts on web development, technology, and more."
>
  <Header slot="header" />
  
  <div class="space-y-8">
    <section class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Welcome to My Blog
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Exploring web development, technology, and creative ideas
      </p>
    </section>

    <section>
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Recent Posts</h2>
        <a 
          href="/blog" 
          class="text-blue-600 hover:text-blue-800 font-semibold transition-colors"
        >
          View all posts â†’
        </a>
      </div>

      {recentPosts.length > 0 ? (
        <div class="space-y-6">
          {recentPosts.map(post => (
            <BlogPostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.slug}
              tags={post.data.tags}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-gray-50 rounded-lg">
          <p class="text-gray-600 text-lg">No blog posts yet. Check back soon!</p>
        </div>
      )}
    </section>
  </div>

  <Footer slot="footer" />
</BaseLayout>
