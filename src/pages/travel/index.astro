---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContentListItem from '../../components/ContentListItem.astro';

// Fetch all published travel posts (draft: false)
const allPosts = await getCollection('travel', ({ data }) => {
  return data.draft === false;
});

// Sort posts in reverse chronological order
const sortedPosts = allPosts.sort((a, b) => {
  return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
});
---

<BaseLayout 
  title="Travel - Harsh Jaluka"
>
  <Header slot="header" />
  
  <div class="travel-container space-y-8">
    <div class="page-intro" style="margin-bottom: 4rem;">
      <p>I like sharing stories, insights, and practical tips from my travels across different cultures and landscapes.</p>
    </div>
    
    <div class="mb-8">
      <div class="flex justify-between items-center mb-8">
        <p class="travel-count">
          {sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'}
        </p>

        <!-- Sort Controls -->
        <div class="flex gap-2 flex-wrap items-center">
        <span class="sort-label">Sort by:</span>
        <button 
          id="sort-title" 
          class="sort-btn sort-btn-active"
        >
          Name
        </button>
        <span class="sort-separator">|</span>
        <button 
          id="sort-author" 
          class="sort-btn"
        >
          Length of Stay
        </button>
        <span class="sort-separator">|</span>
        <button 
          id="sort-year" 
          class="sort-btn"
        >
          Last Updated
        </button>
        </div>
      </div>
    </div>

    <ul class="space-y-4">
      {sortedPosts.map(post => (
        <ContentListItem
          title={post.data.title}
          slug={post.slug}
          collection="travel"
          metadata={post.data.pubDate.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        />
      ))}
    </ul>

    {sortedPosts.length === 0 && (
      <div class="text-center py-12">
        <p class="empty-message">No travel posts yet. Check back soon!</p>
      </div>
    )}
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Modern Tech Theme - Travel Index Page Styling */

  .travel-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .travel-count {
    color: var(--color-text-on-dark); /* White text on dark background */
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-6);
  }

  .empty-message {
    color: var(--color-text-muted); /* Muted gray */
    font-size: var(--font-size-lg);
  }

  .page-intro {
    margin-top: var(--spacing-12);
    color: var(--color-text-on-dark);
    font-size: var(--font-size-lg);
    line-height: 1.6;
  }

  .sort-label {
    color: var(--color-text-on-dark); /* White text */
  }

  .sort-separator {
    color: var(--color-text-muted); /* Muted gray */
  }

  .sort-btn {
    color: var(--color-text-on-dark); /* White text */
    border-bottom: 2px solid transparent;
    padding-bottom: 4px;
    background: transparent;
    cursor: pointer;
    transition: var(--transition-colors);
    transition-delay: var(--transition-delay-none);
  }

  .sort-btn:hover {
    color: var(--color-interactive-primary); 
    background: transparent;
  }

  .sort-btn-active {
    border-bottom-color: var(--color-text-on-dark); /* White underline for active */
    font-weight: var(--font-weight-medium);
  }


</style>
