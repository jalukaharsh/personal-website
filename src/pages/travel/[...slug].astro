---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import ContentPost from '../../layouts/ContentPost.astro';

export async function getStaticPaths() {
  const travels = await getCollection('travel', ({ data }) => {
    return data.draft !== true;
  });
  return travels.map(travel => ({
    params: { slug: travel.slug },
    props: { travel },
  }));
}

interface Props {
  travel: CollectionEntry<'travel'>;
}

const { travel } = Astro.props;
const { Content } = await travel.render();
---

<ContentPost
  title={travel.data.title}
  pubDate={travel.data.pubDate}
  tags={travel.data.tags}
  collection="travel"
>
  <Content />
</ContentPost>
