---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const travels = await getCollection('travel');
  return travels.map(travel => ({
    params: { slug: travel.slug },
    props: { travel },
  }));
}

interface Props {
  travel: CollectionEntry<'travel'>;
}

const { travel } = Astro.props;
const { Content } = await travel.render();
---

<BaseLayout 
  title={`${travel.data.title} - Travel`}
  description={travel.data.description}
>
  <Header slot="header" />
  
  <article class="prose prose-lg max-w-none">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">{travel.data.title}</h1>
      <p class="text-gray-500">
        Published on {travel.data.pubDate.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </p>
      {travel.data.tags && travel.data.tags.length > 0 && (
        <div class="flex gap-2 mt-4">
          {travel.data.tags.map(tag => (
            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
    
    <Content />
  </article>

  <Footer slot="footer" />
</BaseLayout>
